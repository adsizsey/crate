import os
import shutil

def copy_and_make_writable(source, destination):
    # Ensure destination exists
    os.makedirs(destination, exist_ok=True)

    # Copy contents of the source directory
    for item in os.listdir(source):
        source_item = os.path.join(source, item)
        destination_item = os.path.join(destination, item)

        if os.path.isdir(source_item):
            shutil.copytree(source_item, destination_item, copy_function=shutil.copy2)
        else:
            shutil.copy2(source_item, destination_item)

    # Make all files and directories writable in the destination
    for root, dirs, files in os.walk(destination):
        # Set permissions for directories
        for dir_name in dirs:
            dir_path = os.path.join(root, dir_name)
            os.chmod(dir_path, 0o777)  # Full permissions for directories

        # Set permissions for files
        for file_name in files:
            file_path = os.path.join(root, file_name)
            os.chmod(file_path, 0o666)  # Read/write for files

# Example usage
source = "/path/to/source"
destination = "/path/to/destination"

copy_and_make_writable(source, destination)

print(f"Copied contents from {source} to {destination} and made them writable.")
